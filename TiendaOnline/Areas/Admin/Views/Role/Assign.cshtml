@model TiendaOnline.Areas.Admin.Models.RoleUsesrVm
@{
    ViewData["Title"] = "Asignar Roles";
}

<br />

<h2 class="text-info"> Asignar Rol</h2>

<form asp-action="Assign" method="post" enctype="multipart/form-data">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
        <h3>@ViewBag.msg</h3>
        <br />

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="UserID"></label>
            </div>
            <div class="col-5">
                <select asp-for="UserID" asp-items="ViewBag.UserID" class="form-control"></select>
                <!-- <input asp-for="CategoriaProductoId" class="form-control"  /> -->
            </div>
            <span asp-validation-for="UserID" class="text-danger"></span>
        </div>
        
        

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="RoleID"></label>
            </div>
            <div class="col-5">
                <select asp-for="RoleID" asp-items="ViewBag.RoleID" class="form-control"></select>
                <!-- <input asp-for="CategoriaProductoId" class="form-control"  /> -->
            </div>
            <span asp-validation-for="RoleID" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" class="btn btn-success" value="Asignar Rol" />
            <a asp-action="Index" class="btn btn-primary">Volver a la lista</a>
        </div>
    </div>
</form>


@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}