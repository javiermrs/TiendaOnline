@{
    ViewData["Title"] = "Eliminar Roles";
}

<br />

<h2 class="text-info"> Eliminar Rol</h2>

<form asp-action="Delete" method="post" id="role-form" enctype="multipart/form-data">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
        <h3>¿Deseas eliminar este Rol?</h3>
        <br />
        <div class="form-group row">
            <div class="col-2">
                <label>Nombre del Rol</label>
            </div>
            <input type="hidden" value="@ViewBag.id" name="id" />
            <div class="col-5">
                <input id="name" readonly="readonly" name="name" required="required" value="@ViewBag.name" class="form-control" />
            </div>
        </div>



        <div class="form-group">
            <input type="submit" class="btn btn-success" value="Eliminar" />
            <a asp-action="Index" class="btn btn-primary">Volver a la lista</a>
        </div>
    </div>
</form>


@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
    $(document).ready(function () {
        $("#role-form").validate({
            rules: {
                UserName: {
                    required: true,
                },
                PasswordHash: {
                    required: true,
                }
            },
            messages: {
                UserName: "Ingrese su correo electrónico",
                PasswordHash: "Ingrese su contraseña"
            }
        });
    })
    </script>

}
