@model TiendaOnline.Models.CategoriaProductos
@{
    ViewData["Title"] = "Editar Categoria";
}

<br />
<br />

<div class="container">

    <h2 class="text-info"> Editar Categoria de Producto</h2>

    <form asp-action="Edit" method="post">
        <div class="p-4 rounded border">
            <input type="hidden" asp-for="ID" />
            <div asp-validation-summary="ModelOnly" class="text-danger">

            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="nombreCategoria"></label>
                </div>
                <div class="col-5">
                    <input asp-for="nombreCategoria" class="form-control" />
                </div>
                <span asp-validation-for="nombreCategoria" class="text-danger"></span>
            </div>
          
            <div class="col-md-6 form-group">
                <button asp-action="Index" class="btn_3">
                    Cancelar
                </button>
                <button type="submit" value="submit" class="btn_3">
                    Actualizar
                </button>
            </div>

        </div>
    </form>
</div>


@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
