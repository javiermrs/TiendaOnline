@model TiendaOnline.Models.Productos
@{
    ViewData["Title"] = "Editar Producto";
}

<br />
<br />

<div class="container">

    <h2 class="text-info"> Editar Producto</h2>

    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <div class="p-4 rounded border row">
            <div asp-validation-summary="ModelOnly" class="text-danger">

            </div>

            <div class="col-8">

                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="Nombre"></label>
                    </div>
                    <div class="col-5">
                        <input type="hidden" asp-for="ID" />
                        <input asp-for="Nombre" class="form-control" />
                    </div>
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="Precio"></label>
                    </div>
                    <div class="col-5">
                        <input asp-for="Precio" class="form-control" />
                    </div>
                    <span asp-validation-for="Precio" class="text-danger"></span>
                </div>


                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="Detalles"></label>
                    </div>
                    <div class="col-5">
                        <input asp-for="Detalles" class="form-control" />
                    </div>
                    <span asp-validation-for="Detalles" class="text-danger"></span>
                </div>


                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="Imagen"></label>
                    </div>
                    <div class="col-5">
                        <input asp-for="Imagen" class="form-control-file" type="file" />
                    </div>
                    <span asp-validation-for="Imagen" class="text-danger"></span>
                </div>



                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="CategoriaProductoId"></label>
                    </div>
                    <div class="col-5">
                        <select asp-for="CategoriaProductoId" asp-items="ViewBag.categoriaProductoId" class="form-control"></select>
                        <!-- <input asp-for="CategoriaProductoId" class="form-control"  /> -->
                    </div>
                    <span asp-validation-for="CategoriaProductoId" class="text-danger"></span>
                </div>



                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="Disponibilidad"></label>
                    </div>
                    <div class="col-5">
                        <input asp-for="Disponibilidad" class="" type="checkbox" />
                    </div>
                    <span asp-validation-for="Disponibilidad" class="text-danger"></span>
                </div>
                <div class="col-md-6 form-group">
                    <button asp-action="Index" class="btn_3">
                        Cancelar
                    </button>
                    <button type="submit" value="submit" class="btn_3">
                        Actualizar
                    </button>
                </div>




            </div>
            <div class="col-4">
                <img src="~/@Model.Imagen" style="width:80%; border-radius: 1px; " />
            </div>


        </div>
    </form>
</div>
@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}