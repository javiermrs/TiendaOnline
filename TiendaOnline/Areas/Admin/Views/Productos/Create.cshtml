@model TiendaOnline.Models.Productos
@{
    ViewData["Title"] = "Agregar Producto";
}

<br />
<br />

<div class="container">

    <h2 class="text-info"> Agregar Nuevo Producto</h2>

    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="p-4 rounded border">
            <div asp-validation-summary="ModelOnly" class="text-danger">

            </div>
            <h3>@ViewBag.message</h3>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Nombre"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Nombre" class="form-control" />
                </div>
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Precio"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Precio" class="form-control" />
                </div>
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>


            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Detalles"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Detalles" class="form-control" />
                </div>
                <span asp-validation-for="Detalles" class="text-danger"></span>
            </div>


            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Imagen"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Imagen" class="form-control-file" type="file" />
                </div>
                <span asp-validation-for="Imagen" class="text-danger"></span>
            </div>



            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="CategoriaProductoId"></label>
                </div>
                <div class="col-5">
                    <select asp-for="CategoriaProductoId" asp-items="ViewBag.categoriaProductoId" class="form-control"></select>
                    <!-- <input asp-for="CategoriaProductoId" class="form-control"  /> -->
                </div>
                <span asp-validation-for="CategoriaProductoId" class="text-danger"></span>
            </div>



            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Disponibilidad"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Disponibilidad" class="" type="checkbox" />
                </div>
                <span asp-validation-for="Disponibilidad" class="text-danger"></span>
            </div>
            <div class="col-md-6 form-group">
                <button asp-action="Index" class="btn_3">
                    Cancelar
                </button>
                <button type="submit" value="Agregar" class="btn_3">
                    Agregar
                </button>
            </div>
        </div>
    </form>


</div>
@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}