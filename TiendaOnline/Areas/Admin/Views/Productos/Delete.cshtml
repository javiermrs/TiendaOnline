@model TiendaOnline.Models.Productos
@{
    ViewData["Title"] = "Eliminar  Producto";
}

<br />

<h2 class="text-info"> Eliminar Producto</h2>

<form asp-action="Delete" method="post" enctype="multipart/form-data">
    <div class="p-4 rounded border row">
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>

        <div class="col-8">

            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Nombre"></label>
                </div>
                <div class="col-5">
                    <input type="hidden" asp-for="ID" />
                    <input asp-for="Nombre" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Precio"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Precio" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>


            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Detalles"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Detalles" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="Detalles" class="text-danger"></span>
            </div>


            @*<div class="form-group row">
            <div class="col-2">
                <label asp-for="Imagen"></label>
            </div>
            <div class="col-5">
                <input asp-for="Imagen" readonly="readonly" class="form-control-file" type="file" />
            </div>
            <span asp-validation-for="Imagen" class="text-danger"></span>
        </div>*@



            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="CategoriaProductoId"></label>
                </div>
                <div class="col-5">
                    @*<select asp-for="CategoriaProductoId" asp-items="ViewBag.categoriaProductoId" class="form-control"></select>*@
                    <input asp-for="CategoriaProductoId" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="CategoriaProductoId" class="text-danger"></span>
            </div>



            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Disponibilidad"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Disponibilidad" class="" readonly="readonly" type="checkbox" />
                </div>
                <span asp-validation-for="Disponibilidad" class="text-danger"></span>
            </div>

            <div class="col-md-6 form-group">
                <h3>¿Estas seguro que deseas eliminar el Producto?</h3>
                <button asp-action="Index" class="btn_3">
                    Cancelar
                </button>
                <button type="submit" value="Eliminar" asp-action="Delete" asp-route-id="@Model.ID" class="btn_3">
                    Eliminar
                </button>
            </div>



        </div>
        <div class="col-4">
            <img src="~/@Model.Imagen"  style="border-radius: 1px; width:80%;" />
        </div>


    </div>
</form>


@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}