@model TiendaOnline.Models.Slider

@{
    ViewData["Title"] = "Eliminar Foto";
}

<br />
<div class="container">
    <h2 class="text-info"> Eliminar la Foto</h2>
    <br />

    <h2 class="text-info"> ¿Seguro que quieres eliminar la Foto?</h2>

    <form asp-action="Delete" method="post" enctype="multipart/form-data">
        <div class="p-4 rounded border">
            <div asp-validation-summary="ModelOnly" class="text-danger">

            </div>


            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="image">Tipo: </label>
                </div>
                <div class="col-5">
                    <input asp-for="image" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="image" class="text-danger"></span>
            </div>



            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Nombre"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Nombre" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>



            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Descripcion"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Descripcion" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>


            <div class="form-group">
                <a asp-action="Index" class="btn_3">Volver a la lista</a>

                <input type="submit" class="btn btn-danger" value="Eliminar" />
            </div>
        </div>
    </form>
            
</div>
@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
