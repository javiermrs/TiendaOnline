@model TiendaOnline.Models.Especiales
@{
    ViewData["Title"] = "Eliminar Especial";
}

<br />

<h2 class="text-info"> ¿Seguro que quieres eliminar el especial?</h2>
<br />
<form asp-action="Delete" method="post">
    <div class="p-4 rounded border">

        <input type="hidden" asp-for="ID" />
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Nombre"></label>
            </div>
            <div class="col-5">
                <input asp-for="Nombre" readonly="readonly" class="form-control" />
            </div>
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-danger" value="Eliminar" />
            <a asp-action="Index" class="btn btn-primary">Volver a la lista</a>
        </div>
    </div>
</form>


@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}