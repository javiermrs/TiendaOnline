
@{
    ViewData["Title"] = "Inicio";
}
@model ProductosSlider

<br />

<div id="carousel" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        @{Boolean first = true;}
        @foreach (Slider item in Model.sliders)
        {
            <div class="carousel-item  @(first?"active": "")">
                <img class="slider-area" style="width:100%;" src="~/@item.image" alt="Slider" />
            </div>

            first = false;
        }

    </div>
    <a class="carousel-control-prev" data-target="#carousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" data-target="#carousel" data-slide="next">
        <span class="carousel-control-next-icon"></span>
        <span class="sr-only">Next</span>
    </a>

</div>

<div class="slider-area ">
    <div class="slider-active">
        <!-- Single Slider -->
        <div class="single-slider slider-height d-flex align-items-center slide-bg">
            <div class="container">
                <div class="row justify-content-between align-items-center">
                    <div class="col-xl-8 col-lg-8 col-md-8 col-sm-8">
                        <div class="hero__caption">
                            <h1 data-animation="fadeInLeft" data-delay=".4s" data-duration="2000ms">Las mejores ofertas aquí.</h1>
                            <p data-animation="fadeInLeft" data-delay=".7s" data-duration="2000ms">
                                Los productos con más calidad a nivel nacional e internacional estan en esta pagina.
                                <br />Con más de 30 años en el negocio somos la empresa numero 1 en el mundo del eCommerce.
                            </p>
                            <!-- Hero-btn -->
                            <div class="hero__btn" data-animation="fadeInLeft" data-delay=".8s" data-duration="2000ms">
                                <a asp-area="Cliente" asp-controller="Home" asp-action="index" class="button button-contactForm boxed-btn">Comprar ahora</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-3 col-lg-3 col-md-4 col-sm-4 d-none d-sm-block">
                        <img src="~/TimeZone/assets/img/hero/watch.png" alt="" class=" heartbeat">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

