@model TiendaOnline.Models.ApplicationUser
@{
    ViewData["Title"] = "Editar Usuario";
}

<br />
<div class="container">
    <h2 class="text-info"> Editar usuario</h2>

    <form asp-action="Active" method="post" id="user-form" enctype="multipart/form-data">
        <div class="p-4 rounded border">
            <div asp-validation-summary="ModelOnly" class="text-danger">

            </div>

            <input type="hidden" asp-for="Id" value="@Model.Id" />

            <h3>@ViewBag.message</h3>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="UserName"></label>
                </div>
                <div class="col-5">
                    <input asp-for="UserName" class="form-control" readonly="readonly" />
                </div>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>




            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="fechaNacimiento"></label>
                </div>
                <div class="col-5">
                    <input asp-for="fechaNacimiento" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="fechaNacimiento" class="text-danger"></span>
            </div>

            <div class="col-md-6 form-group">
                <button asp-action="Index" class="btn_3">
                    Cancelar
                </button>
                <button type="submit" value="Eliminar" class="btn_3">
                    Activar Cuenta
                </button>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
    $(document).ready(function () {
        $("#user-form").validate({
            rules: {
                UserName: {
                    required: true,
                },
                PasswordHash: {
                    required: true,
                }
            },
            messages: {
                UserName: "Ingrese su correo electrónico",
                PasswordHash: "Ingrese su contraseña"
            }
        });
    })
    </script>

}
