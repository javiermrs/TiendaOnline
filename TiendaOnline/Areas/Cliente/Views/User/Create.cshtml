@model TiendaOnline.Models.ApplicationUser
@{
    ViewData["Title"] = "Registro de Usuario";
}

<!--================login_part Area =================-->
<section class="login_part">
    <div class="container">
        <div class="row align-items-center ">
     
            <div class="col-lg-6 col-md-6 ">
                <div class="login_part_form">
                    <div class="login_part_form_iner">
                        <h1 class="m-b2 text-center">
                            Nuevo Usuario
                        </h1>
                        <br>
                        <form class="row contact_form" asp-action="Create" method="post" id="user-form" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <h3>@ViewBag.message</h3>
                            <div class="col-md-12 form-group p_star">
                                <label asp-for="UserName">Correo electrónico</label>
                                <input asp-for="UserName"  class="form-control"
                                       placeholder="Correo electrónico">
                                <span asp-validation-for="UserName" class="text-danger"></span>

                            </div>
                            <div class="col-md-12 form-group p_star">
                                <label asp-for="PasswordHash">Contraseña</label>
                                <input asp-for="PasswordHash" type="password" class="form-control" placeholder="Contraseña">
                                <span asp-validation-for="PasswordHash" class="text-danger"></span>
                            </div>

                            <div class="col-md-12 form-group p_star">
                                <label asp-for="fechaNacimiento">Fecha de nacimiento</label>
                                <input asp-for="fechaNacimiento" class="form-control" placeholder="Password">
                                <span asp-validation-for="fechaNacimiento" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 form-group">

                                <button asp-action="Index" class="btn_3">
                                    Cancelar
                                </button>
                            </div>
                            <div class="col-md-6 form-group">

                                <button type="submit" value="submit" class="btn_3">
                                    Ingresar
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--================login_part end =================-->

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function () {
            $("#user-form").validate({
                rules: {
                    UserName: {
                        required: true,
                    },
                    PasswordHash: {
                        required: true,
                    }
                },
                messages: {
                    UserName: "Ingrese su correo electrónico",
                    PasswordHash: "Ingrese su contraseña"
                }
            });
        })
    </script>

}
